{
  "name": "lodgeease",
  "version": "1.0.0",
  "description": "Lodge Ease Management System",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./AdminSide/dist/tailwind.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./AdminSide/dist/tailwind.css --minify",
    "start": "node server.js",
    "dev": "concurrently \"npm run build:css\" \"npm run start\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.4.7",
    "openai": "^4.78.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
